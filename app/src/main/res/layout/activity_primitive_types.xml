                <View
                    android:layout_height="2dp"
                    android:background="#FF909090"/>

                <TableRow>
                    <TextView
                        android:text="long \n(длинное целое)"
                        android:padding="3dp"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#FF909090"/>
                    <TextView
                        android:text="64"
                        android:padding="3dp"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#FF909090"/>
