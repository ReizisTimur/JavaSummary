                        android:text="-2\u2076\u00B9"
                        android:padding="3dp"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#FF909090"/>

                    <TextView
                        android:padding="3dp"
                        android:text="+2\u2076\u00B9-1"
                        android:textIsSelectable="false" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#FF909090"/>
                    <TextView
                        android:text="Long"
                        android:padding="3dp"
                        />
