                <View
                    android:layout_height="2dp"
                    android:background="#FF909090"/>
            </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/heading"
                android:text="Дополнительные классы без соответствующих примитивных типов"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/primitiveTypesString"

                />
